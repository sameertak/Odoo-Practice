    <t t-name="pos_training.PhoneNumberPopup" owl="1">
        <Draggable>
            <div class="popup popup-textarea">
                <header class="title drag-handle">
                    Order Note
                </header>
                <div class="popup-textarea-wrap">
                    <textarea t-model="state.phoneNumberInput" t-ref="phoneNumber"></textarea>
                </div>
                <footer class="footer">
                    <div class="button confirm highlight" t-on-click="confirm">
                        <t t-esc="props.confirmText" />
                    </div>
                    <div class="button cancel" t-on-click="cancel">
                        <t t-esc="props.cancelText" />
                    </div>
                </footer>
            </div>
        </Draggable>
    </t>
</templates>
                            